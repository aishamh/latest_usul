modules = ["nodejs-20", "ruby-3.2", "swift-5.8", "c-clang14"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true
integrations = ["javascript_log_in_with_replit:1.0.0", "javascript_openai:1.0.0"]

[[ports]]
localPort = 3001
externalPort = 3003

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3001

[[ports]]
localPort = 35641
externalPort = 3002

[[ports]]
localPort = 42107
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Expo App"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Server"

[[workflows.workflow]]
name = "Expo App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "EXPO_DEVTOOLS_LISTEN_ADDRESS=0.0.0.0 EXPO_ROUTER_APP_ROOT=src/app npx expo start --port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node api-server.js"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "echo 'Starting server...' && node server.js"]
build = ["bash", "-c", "echo 'Starting build...' && npx expo export --platform web && echo 'âœ“ Build completed successfully' && ls -la dist/"]
